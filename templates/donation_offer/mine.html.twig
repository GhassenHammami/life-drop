{# templates/donation_offer/mine.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}
    My offers â€” LifeDrop
{% endblock %}
{% block body %}
    <div class="mx-auto max-w-6xl px-6 py-10 md:py-14">
        <div class="mx-auto max-w-4xl">
            <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
                <div>
                    <h1 class="text-4xl font-bold tracking-tight">
                        My offers
                    </h1>
                    <p class="mt-3 text-slate-300/90">
                        Offers youâ€™ve sent to requests. You can jump back to the request anytime.
                    </p>
                </div>
                <a href="{{ path('app_blood_request_index') }}" class="inline-flex w-fit items-center justify-center rounded-2xl bg-white/5 px-4 py-2 text-sm font-semibold text-slate-100
                    ring-1 ring-white/10 hover:bg-white/10">
                    Browse requests
                </a>
            </div>
            {% for message in app.flashes('success') %}
                <div class="mt-6 rounded-2xl border border-emerald-500/25 bg-emerald-500/10 p-4 text-sm text-emerald-100">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="mt-6 rounded-2xl border border-rose-500/25 bg-rose-600/10 p-4 text-sm text-rose-100">
                    {{ message }}
                </div>
            {% endfor %}
            {% if offers|length == 0 %}
                <div class="mt-8 rounded-3xl bg-white/5 p-8 text-center ring-1 ring-white/10">
                    <div class="mx-auto grid h-12 w-12 place-items-center rounded-2xl bg-rose-600/15 text-rose-200 ring-1 ring-rose-400/20">
                        ðŸ©¸
                    </div>
                    <h2 class="mt-4 text-xl font-semibold">
                        No offers yet
                    </h2>
                    <p class="mt-2 text-sm text-slate-300/90">
                        Find an urgent request and send a quick message to help.
                    </p>
                    <div class="mt-6">
                        <a href="{{ path('app_blood_request_index') }}" class="inline-flex items-center justify-center rounded-2xl bg-rose-600 px-5 py-3 text-sm font-semibold text-white
                            hover:bg-rose-500 shadow-lg shadow-rose-600/25">
                            View urgent requests
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="mt-8 grid gap-6 md:grid-cols-2">
                    {% for offer in offers %}
                        {% set req = offer.request %}
                        {% set offerStatus = (offer.status ?? 'PENDING')|upper %}
                        {% set reqStatus = (req and req.status ? req.status : 'OPEN')|upper %}
                        {% set urgency = (req and req.urgency ? req.urgency : '')|upper %}
                        {# Offer badge color #}
                        {% set offerBadge =
              offerStatus == 'ACCEPTED'
                ? 'bg-emerald-500/15 text-emerald-200 ring-emerald-400/20'
                : (offerStatus == 'REJECTED'
                  ? 'bg-rose-600/15 text-rose-200 ring-rose-400/20'
                  : 'bg-amber-500/15 text-amber-200 ring-amber-400/20') %}
                        {# Card accent tint #}
                        {% set cardTint =
              offerStatus == 'ACCEPTED'
                ? 'from-emerald-500/12 to-white/5 ring-emerald-400/20'
                : (offerStatus == 'REJECTED'
                  ? 'from-rose-600/12 to-white/5 ring-rose-400/20'
                  : 'from-amber-500/12 to-white/5 ring-amber-400/20') %}
                        {# Urgency badge #}
                        {% set urgencyBadge =
              urgency == 'HIGH'
                ? 'bg-rose-600/15 text-rose-200 ring-rose-400/20'
                : (urgency == 'MEDIUM'
                  ? 'bg-amber-500/15 text-amber-200 ring-amber-400/20'
                  : 'bg-emerald-500/15 text-emerald-200 ring-emerald-400/20') %}
                        <div class="rounded-3xl bg-linear-to-b {{ cardTint }} p-1 ring-1">
                            <div class="rounded-3xl bg-slate-950/60 p-5 backdrop-blur md:p-6">
                                <div class="flex items-start justify-between gap-3">
                                    <div>
                                        <div class="text-xs text-slate-300/80">
                                            Offer status
                                        </div>
                                        <div class="mt-2 inline-flex items-center gap-2 rounded-2xl px-3 py-2 text-xs font-semibold ring-1 {{ offerBadge }}">
                                            {{ offerStatus }}
                                        </div>
                                        <div class="mt-2 text-xs text-slate-400">
                                            Sent
                                            {{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i') : 'â€”' }}
                                        </div>
                                    </div>
                                    {% if req %}
                                        <div class="mt-1 rounded-2xl px-3 py-2 text-xs font-semibold ring-1 {{ urgencyBadge }}">
                                            {{ urgency ?: 'â€”' }}
                                        </div>
                                    {% endif %}
                                </div>
                                {% if req %}
                                    <div class="mt-5 space-y-2 text-sm text-slate-300/90">
                                        <div>
                                            <span class="text-slate-400">
                                                Request:
                                            </span>
                                            <span class="text-slate-200 font-semibold">
                                                #
                                                {{ req.id }}
                                            </span>
                                            <span class="text-slate-300/70">
                                                â€¢
                                            </span>
                                            <span class="text-slate-200 font-semibold">
                                                {{ req.bloodType }}
                                            </span>
                                            <span class="text-slate-300/70">
                                                â€¢
                                            </span>
                                            <span class="text-slate-200">
                                                {{ req.city }}
                                            </span>
                                        </div>
                                        <div class="text-slate-300/90">
                                            <span class="text-slate-400">
                                                Hospital:
                                            </span>
                                            <span class="text-slate-200">
                                                {{ req.hospitalName }}
                                            </span>
                                        </div>
                                        <div class="text-xs text-slate-400">
                                            Request status:
                                            {{ reqStatus }}
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="mt-5 rounded-2xl border border-rose-500/25 bg-rose-600/10 p-4 text-sm text-rose-100">
                                        This request no longer exists (it may have been deleted).
                                    </div>
                                {% endif %}
                                {% if offer.message %}
                                    <div class="mt-5 rounded-2xl bg-white/5 p-4 ring-1 ring-white/10">
                                        <div class="text-xs font-semibold text-slate-300/80">
                                            Your message
                                        </div>
                                        <div class="mt-2 text-sm text-slate-200/90 whitespace-pre-line">
                                            {{ offer.message }}
                                        </div>
                                    </div>
                                {% endif %}
                                <div class="mt-5">
                                    {% if req %}
                                        <a href="{{ path('app_blood_request_show', {id: req.id}) }}" class="inline-flex w-full items-center justify-center rounded-2xl bg-white/5 px-5 py-3 text-sm font-semibold text-slate-100
                                            ring-1 ring-white/10 hover:bg-white/10">
                                            View request â†’
                                        </a>
                                    {% else %}
                                        <button type="button" disabled class="inline-flex w-full items-center justify-center rounded-2xl bg-white/5 px-5 py-3 text-sm font-semibold text-slate-500
                                            ring-1 ring-white/10 cursor-not-allowed">
                                            Request unavailable
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
